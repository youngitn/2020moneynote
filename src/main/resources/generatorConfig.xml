<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<!-- 指定MBG連線資料庫時所需要的MySQL JDBC driver的檔案位置 -->
	<classPathEntry
		location="C:/Users/young/.m2/repository/mysql/mysql-connector-java/8.0.18/mysql-connector-java-8.0.18.jar" />
	<context id="moneynote_mybatis_generator"
		defaultModelType="flat" targetRuntime="MyBatis3Simple">
		<commentGenerator>
			<property name="suppressAllComments" value="true" /><!-- 不要產生MBG的註解 -->
			<property name="suppressDate" value="true" /><!-- 不要產生日期註解 -->
		</commentGenerator>
		<jdbcConnection
			connectionURL="jdbc:mysql://localhost:3306/moneynote?serverTimezone=UTC"
			driverClass="com.mysql.cj.jdbc.Driver" password="123465"
			userId="youngtin">
			<property name="nullCatalogMeansCurrent" value="true" />
			<!--MySQL不支援schema及catelog的設定 -->
		</jdbcConnection>
		<!-- 日期或時間戳記不使用java.util.Date，改用Java8的java.time.LocalDate -->
		<javaTypeResolver>
			<property name="useJSR310Types" value="true" />
		</javaTypeResolver>

		<!-- 要產生的model位置，targetProject的值為專案的Source folder，所以是moneynote/src/main/java -->
		<javaModelGenerator
			targetPackage="study.young.entity"
			targetProject="moneynote/src/main/java" />

		<!-- 要產生的MyBatis Mapper位置 -->
		<sqlMapGenerator targetPackage="study.young.mapper"
			targetProject="moneynote/src/main/java" />

		<!-- 要產生的MyBatis Dao位置 -->
		<javaClientGenerator
			targetPackage="study.young.dao"
			targetProject="moneynote/src/main/java" type="XMLMAPPER" />
		<!-- MyBatisMapper設為xml格式 -->


		<!-- 要生成的資料表 -->
		<table tableName="member">
			<columnOverride column="member_id"
				javaType="java.lang.Long" jdbcType="BIGINT" /><!-- 因為id為unsigned BIGINT所做的設定 -->
		</table>
		<table tableName="expense_record">
			<columnOverride column="expense_id"
				javaType="java.lang.Long" jdbcType="BIGINT" />
			<columnOverride column="member_id"
				javaType="java.lang.Long" jdbcType="BIGINT" />
		</table>
	</context>
</generatorConfiguration>